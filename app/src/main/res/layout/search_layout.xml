<?xml version="1.0" encoding="utf-8"?>
<com.twobbble.view.customview.SearchBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mSearchLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp8"
    android:layout_marginRight="@dimen/dp8"
    android:layout_marginTop="@dimen/dp8"
    android:transitionName="searchBar"
    android:visibility="gone"
    app:layout_scrollFlags="scroll|enterAlways">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_height_small"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/mBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="@dimen/dp8"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <EditText
            android:id="@+id/mSearchEdit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/input_keyword"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/caption"
            android:textSize="@dimen/text14" />

        <ImageButton
            android:id="@+id/mSearchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/dp8"
            android:src="@drawable/ic_search_black_24dp" />

        <ImageButton
            android:id="@+id/mVoiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/dp8"
            android:src="@drawable/ic_keyboard_voice_black_24dp" />

        <ImageButton
            android:id="@+id/mSortBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/dp8"
            android:src="@drawable/ic_filter_list_black_24dp"
            android:visibility="gone" />
    </LinearLayout>
</com.twobbble.view.customview.SearchBar>